<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Bidvest McCarthy">
    <meta name="author" content="Bidvest McCarthy">
    @if (Context.Request.Path.ToString().Length <= 1)
    {
        <title>Bidvest McCarthy</title>
    }
    else
    {
        <title>@ViewData["Title"] - Bidvest McCarthy</title>
    }
    
    <!-- Vendor styles -->
    <link rel="stylesheet" href="~/lib/animate.css/animate.min.css">
    <link rel="stylesheet" href="~/lib/dropzone/dist/dropzone.css">
    <link rel="stylesheet" href="~/lib/flatpickr/dist/flatpickr.min.css" />

	<!-- Blender core CSS -->
    <link rel="stylesheet" href="~/css/mccarthy.css" />
    
    <!-- Fontawesome JS -->
    <script>
	  FontAwesomeConfig = { searchPseudoElements: true };
	</script>
    <script src="~/js/fontawesome.js"></script>
    
    <!-- Favicons -->
	<link rel="apple-touch-icon" href="~/favicons/apple-touch-icon.png" sizes="180x180">
	<link rel="icon" href="~/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
	<link rel="icon" href="~/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
	<link rel="manifest" href="~/favicons/manifest.json">
	<link rel="mask-icon" href="~/favicons/safari-pinned-tab.svg" color="#563d7c">
	<link rel="icon" href="~/favicons/favicon.ico">
	<meta name="msapplication-config" content="~/favicons/browserconfig.xml">
	<meta name="theme-color" content="#563d7c">
	
</head>
<body>
	
    @await Html.PartialAsync("Pageload")
	
	@await Html.PartialAsync("Navigation")
	
	<div class="section">
		<div class="container">
			@RenderBody()
		</div>
	</div>
	
    <!-- Core Scripts -->
    <script src="~/js/jquery-3.2.1.min.js"></script>
	<script src="~/js/popper.min.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	
	@RenderSection("Scripts", required: false)
	
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</body>
</html>
