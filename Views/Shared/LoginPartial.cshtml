@using Microsoft.AspNetCore.Identity
@using mccarthy.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav mx-auto">
		<li class="nav-item"><a class="nav-link" href="/dealers">Dealers</a></li>
		<li class="nav-item"><a class="nav-link" href="/add-dealer">Add Dealer</a></li>
		<li class="nav-item"><a class="nav-link" href="/specials">Specials</a></li>
		<li class="nav-item"><a class="nav-link" href="/add-special">Add Special</a></li>
  	</ul>
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
	    <ul class="navbar-nav">
			<li class="nav-item dropdown">
		        <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		          <img class="avatar" src="~/images/avatar.jpg"> @UserManager.GetUserName(User) <i class="fa fa-chevron-down"></i>
		        </a>
		        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
			        <a class="dropdown-item" href="javascript:void(0)"><i class="fas fa-user-circle fa-fw"></i> My Profile</a>
			        <a class="dropdown-item" href="javascript:void(0)"><i class="fas fa-cog fa-fw"></i> Settings</a>
			        <a class="dropdown-item" href="javascript:void(0)"><i class="fas fa-certificate fa-fw"></i> Whats New</a>
		            <a class="dropdown-item" href="#" onclick="document.getElementById('logoutForm').submit();"><i class="fas fa-power-off fa-fw"></i> Sign Out</a>
		        </div>
		    </li>
	    </ul>
    </form>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a></li>
        <a class="btn btn-primary ml-2" asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a>
    </ul>
}
