@{
    ViewData["Title"] = "Add/Edit Special";
}



<div class="card mb-4">
	
	<div class="card-body">
		<h2 class="mb-4">@ViewData["Title"]</h2>
			<div class="row mb-4">
				<div class="col-md-8">
					
					<div class="row">
						<div class="col-md-8 text-left">
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Advert Heading...">
							</div>
						</div>
						<div class="col-md-4 text-right">
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Price...">
							</div>
						</div>
					</div>
					
					<div class="row mb-3">
						<div class="col">
							<form class="dropzone" id="dropzone-upload"></form>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col">
							<label>Ad Description</label>
							<textarea class="form-control" rows="3"></textarea>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-md-6">
							<input type="text" class="form-control date-picker-start" placeholder="Pick a start date...">
						</div>
						<div class="col-md-6">
							<input type="text" class="form-control date-picker-end" placeholder="Pick an end date...">
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-md-6">
							<input type="email" class="form-control" placeholder="Email Address...">
						</div>
						<div class="col-md-6">
							<input type="text" class="form-control" placeholder="Stock number...">
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-md-6">
							<select class="form-control">
								<option>Select Category</option>
								<option>Demo Vehicles</option>
								<option>New Vehicles</option>
								<option>Used Vehicles</option>
								<option>Services</option>
								<option>Parts</option>
							</select>
						</div>
						<div class="col-md-6">
							<input type="text" class="form-control" placeholder="Url...">
						</div>
					</div>
				</div>
				
				<div class="col-md-3 ml-auto">
					<div class="category-list">
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="branchCheck2" name="myCheckbox">
							<label class="custom-control-label" for="branchCheck2">Arcadia</label>
						</div>
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="branchCheck3" name="myCheckbox">
							<label class="custom-control-label" for="branchCheck3">Ballito</label>
						</div>
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="branchCheck4" name="myCheckbox">
							<label class="custom-control-label" for="branchCheck4">Bruma</label>
						</div>
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="branchCheck5" name="myCheckbox">
							<label class="custom-control-label" for="branchCheck5">Centurion</label>
						</div>
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="branchCheck6" name="myCheckbox">
							<label class="custom-control-label" for="branchCheck6">Durban Kingsmead</label>
						</div>
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="branchCheck7" name="myCheckbox">
							<label class="custom-control-label" for="branchCheck7">Durban North</label>
						</div>
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="branchCheck8" name="myCheckbox">
							<label class="custom-control-label" for="branchCheck8">Edenvale</label>
						</div>
						<div class="custom-control custom-checkbox">
