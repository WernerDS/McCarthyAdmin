							<label class="custom-control-label" for="branchCheck18">Pinetown</label>
						</div>
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="branchCheck19" name="myCheckbox">
							<label class="custom-control-label" for="branchCheck19">Pre-owned Mobeni</label>
						</div>
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="branchCheck20" name="myCheckbox">
							<label class="custom-control-label" for="branchCheck20">Richards Bay</label>
						</div>
