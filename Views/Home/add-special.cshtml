			</div>
		
	</div>
</div>



@section Scripts {
	<script src="~/lib/dropzone/dist/min/dropzone.min.js"></script>
	<script src="~/lib/moment/min/moment.min.js"></script>
	<script src="~/lib/flatpickr/dist/flatpickr.min.js"></script>
	
	<script src="~/js/add-special.js"></script>

}